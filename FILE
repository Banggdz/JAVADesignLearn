---- Tạo file
public static void main(String[] args) {
        // Khởi tạo đối tượng File với tên "input.txt"
        File file = new File("input.txt");

        try {
            // Kiểm tra xem file đã tồn tại chưa, nếu chưa thì tạo mới
            if (file.createNewFile()) {
                System.out.println("Đã tạo file mới: " + file.getName());
            } else {
                System.out.println("File đã tồn tại.");
            }
        } catch (IOException e) {
            // Xử lý ngoại lệ nếu có lỗi khi tạo file
            System.out.println("Đã xảy ra lỗi: " + e.getMessage());
        }
    }
--- Đọc file
 public static void main(String[] args) {
        try {
            // Tạo đối tượng File trỏ đến file "input.txt"
            File file = new File("input.txt");

            // Sử dụng Scanner để đọc nội dung từ file
            Scanner scanner = new Scanner(file);

            // Đọc dòng đầu tiên từ file
            String line = scanner.nextLine();
            System.out.println("Nội dung dòng đầu tiên: " + line);

            // Đóng Scanner sau khi sử dụng
            scanner.close();
        } catch (IOException e) {
            // Xử lý nếu có lỗi khi đọc file
            System.out.println("Đã xảy ra lỗi: " + e.getMessage());
        }
    }


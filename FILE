--- Ghi file
public class docghi {
    public static void main(String[] args){
        try{
// true: Viết vào cuối file  ,   ko có true: Xóa hết rồi ghi vào file
        FileWriter writer=new FileWriter("input.txt",true);
        writer.write("Hoc lap trinh Java");
        writer.close();
        }     
        catch(IOException ex){
            System.out.println("ex");
        }
    }
}

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class NameFormatter {

    // Hàm chuẩn hóa chuỗi: viết hoa chữ cái đầu mỗi từ
    public static String formatName(String input) {
        String[] words = input.trim().toLowerCase().split("\\s+");
        StringBuilder formatted = new StringBuilder();

        for (String word : words) {
            if (!word.isEmpty()) {
                formatted.append(Character.toUpperCase(word.charAt(0)))
                         .append(word.substring(1))
                         .append(" ");
            }
        }

        return formatted.toString().trim();
    }

    public static void main(String[] args) {
        try {
            // Mở file nguồn để đọc tên
            File inputFile = new File("name.txt");
            Scanner scanner = new Scanner(inputFile);

            // Mở file đích để ghi tên đã chuẩn hóa
            FileWriter writer = new FileWriter("convert.txt");

            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                String formattedLine = formatName(line);
                writer.write(formattedLine + "\n");
            }

            // Đóng các luồng
            scanner.close();
            writer.close();

            System.out.println("Đã chuẩn hóa xong và ghi vào convert.txt.");
        } catch (IOException e) {
            System.out.println("Lỗi xử lý file: " + e.getMessage());
        }
    }
}

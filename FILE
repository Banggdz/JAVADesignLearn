import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class PrimeNumberFilter {

    public static void main(String[] args) {
        try {
            // Mở file để ghi các số nguyên tố, chế độ ghi tiếp vào cuối file
            FileWriter writer = new FileWriter("28tech_prime.txt", true);

            // Mở file chứa danh sách các số nguyên
            File inputFile = new File("28tech_number.txt");
            Scanner scanner = new Scanner(inputFile);

            // Đọc từng số từ file và kiểm tra xem có phải số nguyên tố không
            while (scanner.hasNextInt()) {
                int number = scanner.nextInt();
                if (isPrime(number)) {
                    writer.write(number + " ");
                }
            }

            // Đóng các luồng sau khi xử lý
            writer.close();
            scanner.close();
        } catch (IOException e) {
            System.out.println("Lỗi xử lý file: " + e.getMessage());
        }
    }

    // Hàm kiểm tra số nguyên tố
    public static boolean isPrime(int n) {
        if (n < 2) return false;
        for (int i = 2; i <= Math.sqrt(n); i++) {
            if (n % i == 0) return false;
        }
        return true;
    }
}
